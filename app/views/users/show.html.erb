<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if @user.image.attached? %>
          <%= image_tag user.image, size: "100*100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100*100" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "edit",edit_user_path,class: "btn btn-secondary btn-block" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @books do |f| %>
          <p>Title</p>
            <%= f.text_field :name %>
          <p>Opinion</p>
            <%= f.text_area :opinion %>
          <%= f.submit 'Create book'%>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
            <% @book.each do |book| %>
            <tr>
              <th></th>
              <th><%= book.name %></th>
              <th><%= book.opinion %></th>
            </tr>
            <% end %>
          </thead>
        </table>
      </div>
    </div>
  </div>
</main>